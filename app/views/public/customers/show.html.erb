<h1>顧客マイページ</h1>
<p class="under_mypage">
  <strong>登録情報</strong>
<%= link_to "編集する", public_customers_edit_path(current_customer.id), class:"btn btn-primary mypage_edit" %>
</p>

<table class="table table-bordered">
					<tr>
						<td>氏名</td>
						<td><%= @customer.last_name %><%= @customer.first_name %></td>
					</tr>
					<tr>
						<td>カナ</td>
						<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
					</tr>
					<tr>
						<td>郵便番号</td>
						<td><%= @customer.postal_code %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= @customer.address %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= @customer.telephone_number %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= @customer.email %></td>
					</tr>
				</table>

			<p class="under_mypage">
        <strong>配送先</strong>
				<%= link_to "一覧を見る",  public_addresses_path, class:"btn btn-primary mypage_edit" %>
			</p>
			<p class="under_mypage">
        <strong>注文履歴</strong>
				<%= link_to "一覧を見る", public_customers_edit_path(current_customer.id), class:"btn btn-primary mypage_edit" %>
			</p>